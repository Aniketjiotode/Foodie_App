                <form  asp-action="Login" class="labclor">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmailId" class="control-label"><span class="glyphicon glyphicon-envelope"></span> EmailId</label>
                        <input asp-for="EmailId" class="form-control" placeholder="Enter email" required />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password" required/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block" @*id="Loginuser"*@><span class="glyphicon glyphicon-off"></span> Login</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <p style="color:black">Not a member? <a href="#">Sign Up</a></p>
                <p style="color:black">Forgot @Html.ActionLink("Password?","ForgotPassword","User")</p>
                
            </div>
