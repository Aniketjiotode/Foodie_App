                <form asp-action="SignupPage"  class="labclor">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"><span class="glyphicon glyphicon-user"></span> FirstName</label>
                        <input asp-for="FirstName" class="form-control" placeholder="First name" id="FirstN" required/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"><span class="glyphicon glyphicon-user"></span> LastName</label>
                        <input asp-for="LastName" class="form-control" placeholder="Last name" id="LastN" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailId" class="control-label"><span class="glyphicon glyphicon-envelope"></span> EmailId</label>
                        <input asp-for="EmailId" class="form-control" placeholder="Enter email" id="Email" required />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter password" id="Password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MobileNo" class="control-label"><span class="glyphicon glyphicon-phone"></span> Mobile</label>
                        <input asp-for="MobileNo" class="form-control" placeholder="Mobile Number" id="Mobile" required>
                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" value="SignupPage" class="btn btn-success btn-block mdclor " ><span class="glyphicon glyphicon-log-in"></span> SignUp</button>
                    </div>
                    <br/>
                    <div class="text-success">@ViewBag.Confirm</div>
                </form>

            </div>
            <div class="modal-footer">
                <p style="color:black">Read terms and conditions <span class="glyphicon glyphicon-hand-right"></span> <a href="#">here</a></p>
            </div>
